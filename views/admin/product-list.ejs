<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <%if (prod.length>0) { %>
        <div class="grid">
            <% for (let product of prod){ %>
            <article class="card product-item">
                <header class="card__header">
                    <h1 class="product__title"><%= product.title %></h1>
                </header>
                <div class="card__image">
                    <img src="<%= product.imageURL%>" alt="A Book">
                </div>
                <div class="card__content">
                    <h2 class="product__price"><%= product.price %>$</h2>
                    <p class="product__description"><%= product.descraption %></p>
                </div>
                <div class="card__actions">
                    <a href="/admin/edit-product/<%=product.id%>?edit=true" class="btn">Edit</a>
                    <a href="/admin/delete-product/<%=product.id%>" class="btn">Delete</a>
                </div>
            </article>
            <% } %>
        </div>
        <% } else {%>
        <h1>No Product found</h1>
        <% } %>
    </main>
</body>

</html>