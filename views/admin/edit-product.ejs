<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <form class="product-form" action="/admin/edit-product" method="POST">
            <div class="form-control">
                <label for="title">Title:</label>
                <input type="text" name="title" id="title" value="<%= editMode ? product.title : ''  %>">
            </div>
            <div class="form-control">
                <label for="imageUrl">Product Image URL:</label>
                <input type="url" name="imageUrl" id="imageUrl" value="<%= editMode ? product.imageURL : ''  %>">
            </div>
            <div class="form-control">
                <label for="productPrice">Product Price:</label>
                <input type="number" step="0.001" name="productPrice" id="productPrice" value="<%= editMode ? product.price : ''  %>" >
            </div>
            <div class="form-control">
                <label for="descraption">Product Descraption:</label>
                <textarea name="descraption" id="descraption" ><%= editMode ? product.descraption : ''  %></textarea> 
            </div>
            <input type="hidden" name ="id" id="Id" value="<%= editMode ? product.id : ''  %>" >
            <button style="display: block;margin: auto;" class="btn" type="submit"><%= editMode ? 'Edit Product' : 'Add Product' %></button>
        </form>
    </main>
</body>

</html>