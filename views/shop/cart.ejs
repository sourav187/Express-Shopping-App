<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <% if( cart.length > 0) {%>
        <ul>
            <% cart.forEach( p => { %>
            <li>
                <%= p.productData.title %>(Quantity:<%= p.qty %> Price:<%=p.productData.price%>$) Total:<%= p.qty*p.productData.price %>
                <form style="display:block;margin:5px;" action="/delete-cart-item" method="post">
                    <button class="btn" type="submit">Delete</button>
                    <input type="hidden" name="productId" value="<%= p.productData.id %>">
                    <input type="hidden" name="productPrice" value="<%= p.productData.price %>">
                </form>
            </li>
            <% }) %>
        </ul>
    <h3>Total Cart Price: <span style="color: red"><%= totalCartValue %>$</span></h3>
        <% } else { %>
        <h1>No Product found in the cart</h1>
        <%}%>
    </main>